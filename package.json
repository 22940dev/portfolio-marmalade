{
  "private": true,
  "name": "@joebell/marmalade",
  "version": "0.0.1",
  "author": "Joe Bell <joe@joebell.co.uk>",
  "license": "ISC",
  "description": "",
  "keywords": [],
  "scripts": {
    "commit": "npx git-cz",
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "lint": "npx tsc --noEmit && npx eslint '*/**/*.{js,ts,tsx}' --fix",
    "serve": "npx serve out",
    "start": "next start"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,html,css,md}": [
      "npx prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.2.2",
    "next-offline": "4.0.6",
    "polished": "^3.4.4",
    "raw-loader": "^4.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.3.1",
    "styled-components": "5.0.1",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@types/node": "^13.1.6",
    "@types/react": "^16.9.17",
    "@types/styled-components": "4.4.3",
    "@types/styled-system": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "babel-plugin-styled-components": "^1.10.7",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  }
}
